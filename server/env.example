# ===== BASE DE DONNÉES =====
DATABASE_URL="file:./dev.db"

# ===== DASHBOARD ADMIN =====
DASHBOARD_SECRET_KEY="your-dashboard-secret-key"
DASHBOARD_ADMIN_EMAIL="admin@kamri.com"
DASHBOARD_ADMIN_PASSWORD="your-admin-password"

# ===== APIS FOURNISSEURS DROPSHIPPING =====

# AliExpress
ALIEXPRESS_API_KEY="your-aliexpress-api-key"
ALIEXPRESS_API_SECRET="your-aliexpress-api-secret"
ALIEXPRESS_APP_KEY="your-aliexpress-app-key"

# Shopify
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"
SHOPIFY_STORE_URL="https://your-store.myshopify.com"

# WooCommerce
WOOCOMMERCE_API_KEY="your-woocommerce-api-key"
WOOCOMMERCE_API_SECRET="your-woocommerce-api-secret"
WOOCOMMERCE_STORE_URL="https://your-store.com"

# Amazon
AMAZON_API_KEY="your-amazon-api-key"
AMAZON_API_SECRET="your-amazon-api-secret"
AMAZON_SELLER_ID="your-amazon-seller-id"

# eBay
EBAY_API_KEY="your-ebay-api-key"
EBAY_API_SECRET="your-ebay-api-secret"
EBAY_CLIENT_ID="your-ebay-client-id"

# ===== SYNCHRONISATION =====
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL=60
MAX_CONCURRENT_SYNCS=5
SYNC_TIMEOUT=30000
SYNC_RETRY_ATTEMPTS=3

# ===== CACHE =====
CACHE_TTL_MOBILE=300
CACHE_TTL_WEB=600
CACHE_TTL_DASHBOARD=1800
REDIS_URL="redis://localhost:6379"

# ===== SÉCURITÉ =====
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="24h"
ENCRYPTION_KEY="your-encryption-key"

# ===== MONITORING =====
LOG_LEVEL="info"
ENABLE_METRICS=true
METRICS_PORT=9090

# ===== NOTIFICATIONS =====
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
NOTIFICATION_EMAIL="admin@kamri.com"

# ===== DÉVELOPPEMENT =====
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

